# Example environment variables for FinancePro
# Copy this file to .env.local and fill in your actual values.

# Supabase connection details (Required)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Database connection string (Required for Prisma/Drizzle, if used server-side)
DATABASE_URL=YOUR_DATABASE_CONNECTION_STRING

# JWT Secret for signing tokens (Required)
JWT_SECRET=YOUR_STRONG_JWT_SECRET

# Session Secret for session management (Required)
SESSION_SECRET=YOUR_STRONG_SESSION_SECRET

# Optional: Define specific API and App URLs if needed
# NEXT_PUBLIC_API_URL=http://localhost:3000/api
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Define CORS origin for development/production
# CORS_ORIGIN=http://localhost:3000

# Optional: Disable CSRF protection (Use with caution, primarily for development/testing)
# DISABLE_CSRF=true

