# 환경 변수 예시 파일 - 실제 값으로 변경하여 .env 파일로 저장하세요

# 개발/프로덕션 구분
NODE_ENV=development

# 애플리케이션 URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/cryptotrader
POSTGRES_DB=cryptotrader
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis 설정
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=defaultpassword

# JWT 설정
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRE=24h

# 암호화 키
ENCRYPTION_KEY=your-32-character-encryption-key

# 외부 API 키들
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINMARKETCAP_API_KEY=your-coinmarketcap-key

# 이메일 서비스 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 모니터링 및 분석
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
HOTJAR_ID=your-hotjar-id

# 제3자 서비스
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# 클라우드 서비스 (AWS/GCP)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# 로깅
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# 캐시 설정
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# 웹소켓 설정
WS_PORT=8080
WS_PATH=/ws

# 백업 설정
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# 개발 도구 (개발 환경에서만)
WEBPACK_BUNDLE_ANALYZER=false
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# A/B 테스트 설정
AB_TEST_ENABLED=true
FEATURE_FLAGS_API_KEY=your-feature-flags-key

# 성능 모니터링
NEW_RELIC_LICENSE_KEY=your-newrelic-key
DATADOG_API_KEY=your-datadog-key

# 보안 설정
SESSION_SECRET=your-session-secret-minimum-32-characters
CSRF_SECRET=your-csrf-secret
BCRYPT_ROUNDS=12

# 외부 서비스 타임아웃
API_TIMEOUT=30000
DB_TIMEOUT=10000
REDIS_TIMEOUT=5000

# 파일 업로드
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# 알림 서비스
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url 